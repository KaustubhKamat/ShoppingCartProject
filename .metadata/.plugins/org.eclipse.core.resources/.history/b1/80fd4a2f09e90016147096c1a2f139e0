		// TODO Auto-generated method stub
		return null;
	}

	public boolean deleteByCartId(String id) {
		// TODO Auto-generated method stub
		return false;
	}

	public Cart get(String id) {
		// TODO Auto-generated method stub
		return null;
	}

	public long getTotalAmount(String id) {
		// TODO Auto-generated method stub
		return 0;
	}

	
	

	
}

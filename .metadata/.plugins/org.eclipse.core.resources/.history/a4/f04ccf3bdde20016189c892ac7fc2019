
<b:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xsi:schemaLocation="
      http://www.springframework.org/schema/security 
      http://www.springframework.org/schema/security/spring-security-4.0.xsd
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
 
	
	<http auto-config="true">
		<intercept-url pattern="/Add**" access="hasRole('Admin')" /> 
		<intercept-url pattern="/MyCart" access="hasRole('Customer')" />
		<!-- <intercept-url pattern="/" access="ROLE_ADMIN" /> -->

		<form-login login-page='/login' login-processing-url= "/login" username-parameter="username"
			password-parameter="password"  authentication-failure-url="/AccessDenied" />
		<logout logout-url="/Logout" />
	</http>
<!-- 
	<authentication-manager> <authentication-provider> <user-service> <user 
		name="user" password="user@123" authorities="ROLE_ADMIN" /> </user-service> 
		</authentication-provider> </authentication-manager>
 -->
 
	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="select emailid,password, 'true' as enabled from user1 where emailid=?"
				authorities-by-username-query="select emailid, role from user1 where emailid =?  " />
		</authentication-provider>
	</authentication-manager>


</b:beans>